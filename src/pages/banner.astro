---
import Roller from '../components/Roller.astro'
import Layout from '../layouts/Layout.astro'

const rollerItems = [
  'Good software by good people',
  'Email kyle@agath.ist to discuss a project',
]
---

<Layout title="Banner">
  <div class="flex grow flex-col justify-center">
    <div class="flex items-baseline justify-between gap-4 p-4">
      <h1
        class="animate-backAndForth inline-block bg-gradient-to-r from-rose-500 via-pink-500 to-orange-400 bg-[length:300%] bg-clip-text text-3xl font-bold text-transparent"
      >
        Agathist
      </h1>

      <div class="font-serif text-lg">
        <Roller items={rollerItems} />
      </div>

      <p class="border-b border-b-pink-500 leading-none">https://agath.ist</p>
    </div>
  </div>
</Layout>
